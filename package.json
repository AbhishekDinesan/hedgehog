{
  "name": "hedgehog",
  "displayName": "hedgehog",
  "description": "agentic debugging",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hedgehog.start",
        "title": "Open System Debugger",
        "category": "Hedgehog"
      },
      {
        "command": "hedgehog.snapshot",
        "title": "Capture System Snapshot",
        "category": "Hedgehog"
      }
    ],
    "configuration": {
      "title": "Hedgehog",
      "properties": {
        "hedgehog.visualizationMode": {
          "type": "string",
          "enum": [
            "memory-blocks",
            "graph"
          ],
          "default": "memory-blocks",
          "description": "Visualization style: memory-blocks (debugger-style) or graph (Mermaid diagram)"
        },
        "hedgehog.autoOpenPanel": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open visualization panel when debugging starts"
        },
        "hedgehog.autoSnapshot": {
          "type": "boolean",
          "default": true,
          "description": "Automatically take snapshot when debugger pauses at breakpoint"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build:native": "node-gyp rebuild",
    "build:native:debug": "node-gyp rebuild --debug",
    "clean:native": "node-gyp clean",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^10.3.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
